<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.release.bibhu.planetappliances">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.LoginActivity"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.SplashScreen"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.UserDashBoard"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <service android:name="com.release.bibhu.planetappliances.Firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.release.bibhu.planetappliances.Firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.release.bibhu.planetappliances.Activity.ForgotPassword"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.ComplainActivity"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.ComplaintDetails"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.TodayComplain"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.AddCustomer"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.PreLogin"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.Complain"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.AMCLIST"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.EnquiryDetails"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.OnlyServicngDetailsActivity"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.MotorServicngDetailsActivity"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.AgentMotorServicngDetailsActivity"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:name="com.release.bibhu.planetappliances.Activity.AgentOnlyServicngDetailsActivity"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>


    </application>

</manifest>