<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">



    <ImageView
        android:id="@+id/nav_drawer_image"
        android:layout_width="@dimen/drawer_menu_width"
        android:layout_height="@dimen/drawer_menu_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/drawer_menu_image_margin_left"
        android:layout_marginRight="@dimen/drawer_menu_image_margin_right" />

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/drawer_menu_title_margin_left"
        android:paddingBottom="@dimen/drawer_menu_title_padding_bottom"
        android:paddingLeft="@dimen/drawer_menu_title_padding_left"
        android:paddingTop="@dimen/drawer_menu_title_padding_top"
        android:textSize="@dimen/drawer_menu_title_textsize"
        android:textColor="@color/navigation_drawer_menu_text_color"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:background="@color/navigation_drawer_menu_separator_color"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/drawer_menu_separator_line_margin_top"
        android:layout_marginLeft="@dimen/drawer_menu_separator_line_margin_left"
        android:layout_marginRight="@dimen/drawer_menu_separator_line_margin_right"
        android:layout_height="@dimen/drawer_menu_separator_line_height"
        />


</RelativeLayout>