<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/main_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<include
    android:id="@+id/toolbar"
    layout="@layout/toolbar" />

<RelativeLayout
    android:id="@+id/child_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/service_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motor Service Details"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:background="#70A2A3A3"
        android:layout_below="@+id/service_text"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/phone"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/add"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/date"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:layout_height="35dp" />


    </LinearLayout>



    <Button
        android:id="@+id/resolve"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/toolbar_logo_height"
        android:layout_marginTop="@dimen/login_button__margin_top"
        android:background="@drawable/button_radious"
        android:text="Resolve"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/login_button_text_size" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/feed_back"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:hint="Technician FeedBack"
        android:layout_above="@+id/resolve"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="10dp"
        android:layout_height="80dp" />

</RelativeLayout>




</LinearLayout>


