<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

        <RelativeLayout
            android:id="@+id/child_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/service_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Only Servicing AMC Details"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_text"
                android:background="#70A2A3A3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/amc_no"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/service_date"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/service_no"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#000000" />


            </LinearLayout>


            <Button
                android:id="@+id/resolve"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/toolbar_logo_height"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/login_button__margin_top"
                android:background="@drawable/button_radious"
                android:text="Resolve"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/login_button_text_size" />

            <EditText
                android:id="@+id/feed_back"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_above="@+id/resolve"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center_vertical"
                android:hint="Technician FeedBack"
                android:paddingLeft="10dp" />

        </RelativeLayout>



    <RelativeLayout
        android:id="@+id/child_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/service_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Only Servicing AMC Details"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_text"
            android:background="#70A2A3A3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/amc_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/service_date"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/service_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#000000" />


        </LinearLayout>


        <Button
            android:id="@+id/resolve"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/toolbar_logo_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/login_button__margin_top"
            android:background="@drawable/button_radious"
            android:text="Resolve"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/login_button_text_size" />

        <EditText
            android:id="@+id/feed_back"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/resolve"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical"
            android:hint="Technician FeedBack"
            android:paddingLeft="10dp" />

    </RelativeLayout>

</LinearLayout>


